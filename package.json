{
  "name": "scl",
  "version": "0.2.1",
  "description": "Foundation for SCL React Projects",
  "main": "src/app.jsx",
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --hot --colors --content-base static/",
    "build": "echo 'File Size (before): ' && ls -lah dist/scl.min.js | awk '{ print $5}' && NODE_ENV=production webpack -p --config webpack.production.config.js --progress --colors",
    "test": "npm run lint",
    "lint": "./node_modules/eslint/bin/eslint.js -c ./.eslintrc --ext .jsx --ext .js src",
    "stats": "webpack --profile --json > stats.json && echo 'Upload here ---> webpack.github.io/analyse/#modules'",
    "clean": "rm -rf node_modules/ && npm i && npm start"
  },
  "author": "justin@secretcowlevel.com",
  "license": "none",
  "dependencies": {
      "react": "^15.3.0",
      "react-bootstrap": "^0.30.2",
      "react-dom": "^15.3.0",
      "react-hot-loader": "^1.2.8",
      "react-redux": "^4.4.1",
      "redux": "^3.3.1",
      "redux-devtools": "^3.3.1",
      "redux-logger": "^2.6.1",
      "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "compression-webpack-plugin": "^0.3.1",
    "eslint": "^3.2.2",
    "eslint-config-airbnb": "^10.0.0",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-react": "^6.0.0",
    "isomorphic-fetch": "^2.2.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.10.1"
  }
}
